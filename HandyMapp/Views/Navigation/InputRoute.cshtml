
@{
    ViewData["Title"] = "InputRoute";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row breadcrumbRow">
  <ul class="container breadcrumbContainer">
    <li class="breadcrumbHandy visitedBreadcrumb breadcrumblineVisited"><a asp-controller="Navigation" asp-action="SelectWalkingAid">Way of navigating</a></li>
    <li class="breadcrumbHandy visitedBreadcrumb breadcrumblineVisited"><a asp-controller="Navigation" asp-action="Preferences">Selecting preferences</a></li>
    <li class="breadcrumbHandy currentBreadcrumb"><div class="breadcrumbLineCurrent"></div>Enter adress</li>
    <li class="breadcrumbHandy">Find your route</li>
  </ul>
</div> <!-- visitedBreadcrumb breadcrumblineVisited     <div class="breadcrumbLineCurrent"></div>       currentBreadcrumb-->
<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 pageTitle">
    <span>Where do you want to go?</span>
  </div>
</div>
<div class="container form-container col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
    <form method="post">
        <div class="form-group">
            <label class="from-to">From:</label>
            <div class="autocomplete">
                <input name="search1" type="text" class="search" id="search" placeholder="For example: Restaurant, Gemeentehuis of station.." autocomplete="on" autofocus>
            </div>
        </div>
        <div class="form-group">
            <label class="from-to">To:</label>
            <div class="autocomplete">
                <input name="search2" type="text" class="search" id="search" placeholder="For example: Restaurant, Gemeentehuis of station.." autocomplete="on" autofocus>
            </div>
        </div>
        @ViewBag.Error
        <div class="col-sm-12 col-md-12 col-lg-12 form-button">
            <span style="color:white;"> Input for the route...</span>
            <button class="btn btn-block btn-primary btn-lg" asp-controller="Navigation" asp-action="RouteOptions" type="submit" method="post"><span class="glyphicon glyphicon-ok-circle"></span>Route options</button>
        </div>
    </form>
</div>
