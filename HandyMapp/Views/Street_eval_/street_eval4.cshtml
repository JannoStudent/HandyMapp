@model HandyMapp.Models.street_eval_model

@{
    ViewData["Title"] = "street_eval2";
}
<script>
    function continueOrNot() {
        if (document.getElementById('selectedObst_type').value == "None") {
            document.getElementById("show_exeption").style.visibility = "visible";
            return false;
        } else {
            return true;
        }
    }
</script>

<div class="row breadcrumbRow">
  <ul class="container breadcrumbContainer">
    <li class="breadcrumbHandy visitedBreadcrumb breadcrumblineVisited"><a asp-controller="Street_eval_" asp-action="select_walking_aid"> Review choice</a></li>
    <li class="breadcrumbHandy visitedBreadcrumb breadcrumblineVisited"><a asp-controller="Street_eval_" asp-action="street_eval"> Select adress/building</a></li>
    <li class="breadcrumbHandy currentBreadcrumb"><div class="breadcrumbLineCurrent"></div>Enter your review</li>
    <li class="breadcrumbHandy">Finish your review</li>
  </ul>
</div> <!-- visitedBreadcrumb breadcrumblineVisited     <div class="breadcrumbLineCurrent"></div>       currentBreadcrumb-->
<div id="show_exeption" style="visibility:hidden">
    <center>
        <div style="width:70%;color:white;  background: red;
  border: 3px solid #ccc;
  box-shadow: 1px 1px 8px #fff inset,-1px -1px 8px #fff inset;
  border-radius: 3px/6px;    box-sizing: border-box;font-size:2em;border:#666666 solid 2px;height:54px;margin-bottom:50px;">
            <center>You need to select an obstacle type</center>
        </div>
    </center>
</div>
<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 pageTitle">
    <span>Describe the obstacle</span>
     
  </div>
</div>
<form  method="post" action="@Url.Action("street_eval5", "Street_eval_")" enctype="multipart/form-data" onsubmit="return continueOrNot()">
<div class="row col-sm-offset-1 col-sm-10 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
  <div class="street-eval-form5 col-lg-12 col-md-6 col-sm-6 col-xs-6">
    <div class="form-group" style="margin: 0">
      <label class="form-description" for="">Obstacle type</label>
      <select class="form-control" name="selectedObst_type" value="selectedObst_type" id="selectedObst_type" autofocus>
        <option value="None">-None-</option>
        <option value="stairs">Stairs</option>
          <option value="narrowEntrance">Narrow entrances</option>
          <option value="steepRoad">Steep slopes</option>
          <option value="roadWork">Roadwork</option>
          <option value="bench">Benches</option>
          <option value="damagedSidewalk">Damaged sidewalk</option>
          <option value="elevator">Elevator</option>
        <option value="Other">Other</option>
      </select>
    </div>
    <div class="form-group" style="margin: 0; padding-top: 15px;">
      <label class="form-description">Describe your obstacle</label>
      <textarea class="form-control" name="Obst_description" value="Obst_description" placeholder="Describe the obstacle..." rows="3"></textarea>
    </div>
  </div>
  <div class="street-eval-form6 col-lg-12 col-md-6 col-sm-6 col-xs-6">
    <input type="submit" class="btn btn-block btn-success btn-lg" value="Select obstacle type"/>
  </div>
</div>
    </form>




<link rel="stylesheet" href="~/css/start_rating.css" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js" charset="utf-8"></script>