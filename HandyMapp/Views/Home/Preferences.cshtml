
@{
    ViewData["Title"] = "Preferences";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- JUMBOTRON -->
<div class="jumbotron text-center jumbotron-notFront">
    <div class="container">
        <h3>Manage the pre-defined obstacles for Mobility Scooter:</h3>
    </div>
</div>

<!--Breadcrumbs-->
<div class="container">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active"><a asp-controller="Home" asp-action="">Home</a></li>
        <li class="breadcrumb-item active"><a asp-controller="Home" asp-action="SelectWalkingAid">Select Walking Aid</a></li>
        <li class="breadcrumb-item active">Manage Obstacles</li>
    </ol>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-2 col-md-2 col-lg-2">
            <div class="thumbnail text-center thumbnail-mini" onclick="location.href='mobilityScooter_obstacles.html';" style="cursor: pointer;">
                <img class="card-img-top-walkingAid-mini" src="~/images/map_v2.svg" alt="">
            </div>
        </div>
        <div class="col-sm-10 col-md-10 col-lg-10">
            <div class="thumbnail text-center obstaclesTile">
                <div class="caption">
                    <h3>Check/Uncheck obstacles </h3>
                    <br>
                    <table class="table table-striped table-hover table-condensed text-left">
                        <tr>
                            <th>Obstacle</th>
                            <th>Select</th>
                            <th>Image example</th>
                        </tr>
                        <tr class="success">
                            <td>Stairs</td>
                            <td>
                                <input type="checkbox" checked="checked"><br>
                            </td>
                            <td>...</td>
                        </tr>
                        <tr>
                            <td>steep roads (>= 5%) </td>
                            <td>
                                <input type="checkbox">
                            </td>
                            <td>...</td>
                        </tr>
                        <tr class="success">
                            <td> Road Works</td>
                            <td>
                                <input type="checkbox" checked="checked">
                            </td>
                            <td>...</td>
                        </tr>
                        <tr>
                            <td>Terrain</td>
                            <td>
                                <input type="checkbox">
                            </td>
                            <td>...</td>
                        </tr>
                        <tr class="success">
                            <td>Pavements</td>
                            <td>
                                <input type="checkbox" checked="checked">
                            </td>
                            <td>...</td>
                        </tr>
                        <tr class="success">
                            <td>Narrow entrances</td>
                            <td>
                                <input type="checkbox" checked="checked">
                            </td>
                            <td>...</td>
                        </tr>
                    </table>
                    <a class="btn btn-block btn-primary" asp-controller="Home" asp-action="InputRoute"><span class="glyphicon glyphicon-ok-circle"></span>Plan Route</a>
                </div>
            </div>
        </div>
    </div>
</div>

