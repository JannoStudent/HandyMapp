
@{
    ViewData["Title"] = "Preferences";
    Layout = "~/Views/Shared/_Subpages.cshtml";
}

<!-- JUMBOTRON -->
<div class="jumbotron text-center jumbotron-notFront">
    <div class="container">
    </div>
</div>

<!--Breadcrumbs-->
<div class="description-container">
    <p class="description-text">Check or Uncheck obstacles:</p>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <div class="thumbnail text-center obstaclesTile">
                <div class="caption">
                    <h3><'IconOfChosenWalkingAid'></h3>
                    <br>
                    <table class="table table-striped table-hover table-condensed text-left">
                        <tr>
                            <th>Obstacle</th>
                            <th>Select</th>
                            <th>Image example</th>
                        </tr>
                        <tr class="success">
                            <td>Stairs</td>
                            <td>
                                <input type="checkbox" checked="checked"><br>
                            </td>
                            <td>...</td>
                        </tr>
                        <tr>
                            <td>steep roads (>= 5%) </td>
                            <td>
                                <input type="checkbox">
                            </td>
                            <td>...</td>
                        </tr>
                        <tr class="success">
                            <td> Road Works</td>
                            <td>
                                <input type="checkbox" checked="checked">
                            </td>
                            <td>...</td>
                        </tr>
                        <tr>
                            <td>Terrain</td>
                            <td>
                                <input type="checkbox">
                            </td>
                            <td>...</td>
                        </tr>
                        <tr class="success">
                            <td>Pavements</td>
                            <td>
                                <input type="checkbox" checked="checked">
                            </td>
                            <td>...</td>
                        </tr>
                        <tr class="success">
                            <td>Narrow entrances</td>
                            <td>
                                <input type="checkbox" checked="checked">
                            </td>
                            <td>...</td>
                        </tr>
                    </table>
                    <a class="btn btn-block btn-primary btn-lg" asp-controller="Home" asp-action="InputRoute"><span class="glyphicon glyphicon-ok-circle"></span>Plan Route</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Style {
  <link rel="stylesheet" href="~/css/SelectWalkingAid.css" />
}
