                        </div>
                    </div>
                </div>
                <div class="row">
                    <span class="PlaceAdress">@Html.DisplayTextFor(m => Model[i].result.formatted_address)</span>
                </div>
                <div class="row">
                    <div class="DescriptionContainer">
                        <!-- max 40 words-->
                        <span>Website: @Html.DisplayTextFor(m => Model[i].result.website)</span><br />
                        <span>Rating: @Html.DisplayTextFor(m => Model[i].result.rating)</span><br />
