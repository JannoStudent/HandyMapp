      <g id="_2" transform="matrix(1,0,0,1,3.75692,-2.72152)">
        <text x="29.164px" y="75.726px" style="font-family:'ArialMT', 'Arial', sans-serif;font-size:64.014px;fill:#FFF; stroke:##FFF; stroke-width:1px">3</text>
